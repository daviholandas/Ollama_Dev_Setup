[
  {
    "type": "function",
    "function": {
      "name": "generate_user_story",
      "description": "Generate user stories in INVEST format",
      "parameters": {
        "type": "object",
        "properties": {
          "feature_description": {
            "type": "string",
            "description": "High-level feature description"
          },
          "user_persona": {
            "type": "string",
            "description": "Target user persona (e.g., 'Admin', 'End User', 'Developer')"
          },
          "acceptance_criteria_count": {
            "type": "integer",
            "description": "Number of acceptance criteria to generate",
            "default": 3,
            "minimum": 1,
            "maximum": 10
          },
          "include_estimation": {
            "type": "boolean",
            "description": "Include story point estimation",
            "default": false
          }
        },
        "required": [
          "feature_description",
          "user_persona"
        ]
      }
    }
  },
  {
    "type": "function",
    "function": {
      "name": "create_prioritization_matrix",
      "description": "Create MoSCoW or RICE prioritization matrix",
      "parameters": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Feature or item name"
                },
                "impact": {
                  "type": "integer",
                  "description": "Impact score 1-10",
                  "minimum": 1,
                  "maximum": 10
                },
                "effort": {
                  "type": "integer",
                  "description": "Effort required 1-10",
                  "minimum": 1,
                  "maximum": 10
                },
                "urgency": {
                  "type": "integer",
                  "description": "Urgency score 1-10",
                  "minimum": 1,
                  "maximum": 10
                }
              },
              "required": [
                "name",
                "impact",
                "effort"
              ]
            },
            "description": "Items to prioritize"
          },
          "method": {
            "type": "string",
            "enum": [
              "moscow",
              "rice",
              "value_vs_effort"
            ],
            "description": "Prioritization method",
            "default": "rice"
          }
        },
        "required": [
          "items"
        ]
      }
    }
  },
  {
    "type": "function",
    "function": {
      "name": "plan_sprint",
      "description": "Plan sprint with user stories and tasks",
      "parameters": {
        "type": "object",
        "properties": {
          "sprint_name": {
            "type": "string",
            "description": "Sprint identifier (e.g., 'Sprint 1', 'Q4-2025')"
          },
          "duration_days": {
            "type": "integer",
            "description": "Sprint duration in days",
            "default": 14,
            "enum": [
              7,
              14,
              21,
              30
            ]
          },
          "team_capacity": {
            "type": "integer",
            "description": "Available story points capacity",
            "minimum": 1
          },
          "user_stories": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "story_points": {
                  "type": "integer"
                },
                "priority": {
                  "type": "string",
                  "enum": [
                    "critical",
                    "high",
                    "medium",
                    "low"
                  ]
                }
              }
            },
            "description": "User stories for sprint"
          }
        },
        "required": [
          "sprint_name",
          "team_capacity",
          "user_stories"
        ]
      }
    }
  },
  {
    "type": "function",
    "function": {
      "name": "generate_roadmap",
      "description": "Generate product roadmap with timelines",
      "parameters": {
        "type": "object",
        "properties": {
          "product_vision": {
            "type": "string",
            "description": "High-level product vision statement"
          },
          "timeline_months": {
            "type": "integer",
            "description": "Roadmap timeline in months",
            "default": 12,
            "minimum": 3,
            "maximum": 36
          },
          "phases": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "duration_months": {
                  "type": "integer"
                },
                "key_features": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            },
            "description": "Roadmap phases"
          }
        },
        "required": [
          "product_vision",
          "phases"
        ]
      }
    }
  },
  {
    "type": "function",
    "function": {
      "name": "analyze_requirements",
      "description": "Analyze requirements for completeness and clarity",
      "parameters": {
        "type": "object",
        "properties": {
          "requirements_text": {
            "type": "string",
            "description": "Requirements document or text to analyze"
          },
          "check_completeness": {
            "type": "boolean",
            "description": "Check for missing requirements",
            "default": true
          },
          "check_clarity": {
            "type": "boolean",
            "description": "Check for ambiguous or unclear requirements",
            "default": true
          },
          "check_testability": {
            "type": "boolean",
            "description": "Check if requirements are testable",
            "default": true
          }
        },
        "required": [
          "requirements_text"
        ]
      }
    }
  },
  {
    "type": "function",
    "function": {
      "name": "stakeholder_communication",
      "description": "Generate stakeholder communication materials",
      "parameters": {
        "type": "object",
        "properties": {
          "stakeholder_type": {
            "type": "string",
            "enum": [
              "executive",
              "technical",
              "client",
              "team",
              "investor"
            ],
            "description": "Target stakeholder type"
          },
          "topic": {
            "type": "string",
            "description": "Communication topic (e.g., 'Project Status', 'Feature Demo')"
          },
          "content_type": {
            "type": "string",
            "enum": [
              "email",
              "presentation",
              "report",
              "summary"
            ],
            "description": "Type of communication material"
          },
          "key_points": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Key points to include"
          }
        },
        "required": [
          "stakeholder_type",
          "topic",
          "content_type"
        ]
      }
    }
  }
]
